<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
<LinearLayout 
     android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/statusbar">

    <Button
        android:id="@+id/btn_back"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/backbtn" android:paddingTop="3dp"
        android:onClick="click"/>

<TextView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/TitletextView"
    style="@style/ButtonBar"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|center_horizontal"
    android:text="@string/profile_change"
    android:textAppearance="?android:attr/textAppearanceLarge" />

</LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_date_schedule_start"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/start_date"
            android:background="@drawable/keypad_normal" android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/txv_start_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/input"
            android:paddingLeft="25dp"
            android:paddingTop="15dp"
            android:clickable="true"
            android:onClick="click"
            android:textColor="#000000">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp" >

        <Button
            android:id="@+id/btn_date_schedule_end"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:onClick="click"
            android:text="@string/end_date" android:background="@drawable/keypad_normal" android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/txv_end_date"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/input"
            android:paddingLeft="25dp"
            android:paddingTop="15dp"
            android:textColor="#000000" 
            android:clickable="true"
            android:onClick="click"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/seprator_horizontal" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp" >

        <Button
            android:id="@+id/btn_time_schedule_start"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:onClick="click"
            android:text="@string/start_time" android:background="@drawable/keypad_normal" android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/txv_time_start"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/input"
            android:paddingLeft="25dp"
            android:paddingTop="15dp"
            android:textColor="#000000" 
            android:clickable="true"
            android:onClick="click"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp" >

        <Button
            android:id="@+id/btn_time_schedule_end"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:onClick="click"
            android:text="@string/end_time" android:background="@drawable/keypad_normal" android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/txv_end_time"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/input"
            android:paddingLeft="25dp"
            android:paddingTop="15dp"
            android:textColor="#000000"
            android:clickable="true"
            android:onClick="click" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/phone_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Profile"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Select your phone profile to schedule a change" />
        </LinearLayout>

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.69" >

            <RadioButton
                android:id="@+id/radio0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/radio_button"
                android:checked="true"
                android:text="@string/profile_sound" />

            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/radio_button"
                android:text="@string/profile_silent" />

            <RadioButton
                android:id="@+id/radio2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/radio_button"
                android:text="@string/profile_vibration1" />

            <RadioButton
                android:id="@+id/radio3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/radio_button"
                android:text="@string/profile_vibration2" />

            <TextView
               android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="with Ring"
               
                android:textAppearance="?android:attr/textAppearanceSmall" android:layout_marginLeft="30dp" android:textColor="@color/blue_bar"/>
        </RadioGroup>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="bottom"
        android:layout_marginTop="10dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/btn_saveProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/save"
                android:onClick="click"
                android:src="@drawable/save" />

            <ImageButton
                android:id="@+id/btn_deleteProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="click"
                android:src="@drawable/delete" />

            <ImageButton
                android:id="@+id/btn_showlist"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:onClick="click"
                android:src="@drawable/showlist" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>