<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/linearLayout1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <ImageButton
                            android:id="@+id/monthplus"
                            android:layout_width="60dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:background="@drawable/picker_add"
                            android:onClick="click" />

                        <ImageButton
                            android:id="@+id/dateplus"
                            android:layout_width="60dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:background="@drawable/picker_add"
                            android:onClick="click" />

                        <ImageButton
                            android:id="@+id/yearplus"
                            android:layout_width="60dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:background="@drawable/picker_add"
                            android:onClick="click" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout2"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp" >

                        <TextView
                            android:id="@+id/month"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/picker_text_area"
                            android:paddingLeft="10dp"
                            android:paddingTop="5dp"
                            android:text="dafkhl"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/picker_text_area"
                            android:paddingLeft="10dp"
                            android:paddingTop="5dp"
                            android:text=""
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/year"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/picker_text_area"
                            android:paddingLeft="10dp"
                            android:paddingTop="5dp"
                            android:text=""
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#000000" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <Button
                            android:id="@+id/monthDesc"
                            android:layout_width="60dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:background="@drawable/picker_delete"
                            android:onClick="click" />

                        <Button
                            android:id="@+id/dateDesc"
                            android:layout_width="60dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:background="@drawable/picker_delete"
                            android:onClick="click" />

                        <Button
                            android:id="@+id/yearDesc"
                            android:layout_width="60dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:background="@drawable/picker_delete"
                            android:onClick="click" />
                    </LinearLayout>
                </LinearLayout>
    

</LinearLayout>